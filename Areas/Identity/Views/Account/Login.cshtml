@{
    ViewData["Title"] = "Đăng nhập";
}

@model MyBlog.Areas.Identity.Models.LoginModel

<h1 class="text-center mt-4 text-uppercase fw-bold">Đăng nhập</h1>

<div class="p-3">
    <form class="mx-auto my-auto w-50" asp-area="Identity" asp-controller="Account" asp-action="Login">
        <div class="form-floating mb-4">
            <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com" />
            <label class="fw-bold" asp-for="Email">Email</label>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-floating mb-4">
            <input type="password" class="form-control" asp-for="Password" placeholder="pass" />
            <label class="fw-bold" asp-for="Password">Mật khẩu</label>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-4">
            <div class="d-flex justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="IsRememberMe" unchecked />
                    <label class="form-check-label" asp-for="IsRememberMe">Ghi nhớ tài khoản</label>
                </div>

                <a asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" class="">
                    Quên mật khẩu?
                </a>
            </div>
        </div>

        <button type="submit" class="btn btn-outline-primary mb-4 fs-4 text-uppercase w-100 fw-bold">
            Let's go
        </button>

    </form>

    <div class="text-center">
        <p>Nếu chưa có tài khoản hãy
            <a asp-area="Identity" asp-controller="Account" asp-action="Register">Đăng ký</a>.
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@{
    ViewData["Title"] = "Đăng ký";
}

@model MyBlog.Areas.Identity.Models.RegisterModel

<h1 class="text-center mt-4 text-uppercase fw-bold">Đăng ký</h1>

<div class="p-3">
    <form class="mx-auto my-auto w-50" asp-area="Identity" asp-controller="Account" asp-action="Register">
        <div class="form-floating mb-4">
            <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="username" />
            <label class="fw-bold" asp-for="UserName">
                Tên người dùng (viết thường, không dấu, không cách)
            </label>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="form-floating mb-4">
            <input type="email" class="form-control" asp-for="@Model.Email" placeholder="email" />
            <label class="fw-bold" asp-for="Email">Email</label>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-floating mb-4">
            <input type="password" class="form-control" asp-for="@Model.Password" placeholder="pass" />
            <label class="fw-bold" asp-for="Password">Mật khẩu</label>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-floating mb-4">
            <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="confirm-pass" />
            <label class="fw-bold" asp-for="ConfirmPassword">
                Nhập lại mật khẩu
            </label>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-check mb-4">
            <label class="form-check-label" asp-for="IsAgree">
                Tôi đồng ý với điều khoản ứng dụng
            </label>

            <input class="form-check-input" type="checkbox" asp-for="@Model.IsAgree" checked />
        </div>

        <button type="submit" class="btn btn-outline-primary mb-4 fs-4 text-uppercase w-100 fw-bold">
            Đăng ký
        </button>
    </form>

    <div class="text-center">
        <p>Nếu đã có tài khoản hãy <a asp-area="Identity" asp-controller="Account" asp-action="Login">Đăng nhập</a>.</p>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
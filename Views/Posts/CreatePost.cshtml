@{
    ViewData["Title"] = "Tạo bài viết mới";
}

@model PostDTO

<form asp-action="CreatePost" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label fs-5 fw-bold"></label>
        <input asp-for="@Model.Title" type="text" class="form-control" placeholder="Nhập tiêu đề">
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Image" class="form-label fs-5 fw-bold"></label>
        <input asp-for="@Model.Image" type="file" name="Image" class="form-control" placeholder="Chọn hình ảnh">
        <span asp-validation-for="@Model.Image" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Content" class="form-label fs-5 fw-bold"></label>
        <textarea asp-for="@Model.Content" id="summernote"></textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label class="form-label fs-5 fw-bold">Hashtags</label>
        <div>
            <ul id="ul" style="margin-bottom: 0.5rem; padding-left: 0px">
                <li class="btn btn-secondary">#csharp</li>
                <li class="btn btn-secondary">#csharp</li>
                <li class="btn btn-secondary">#csharp</li>
                <li class="btn btn-secondary">#csharp</li>
                <li class="btn btn-secondary">#csharp</li>
            </ul>
            <input type="text" id="input-tags" class="form-control" placeholder="Nhập #hashtag liên quan...">
        </div>
        @* <span asp-validation-for="PostTags" class="text-danger"></span> *@
    </div>

    <button class="btn btn-outline-dark fs-5 fw-bold">Tạo bài viết</button>
    <a asp-controller="Posts" asp-action="Index" class="btn btn-dark fs-5 ms-3">Hủy</a>
</form>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                placeholder: "Nhập nội dung bài đăng...",
                height: 400,
            })
        });

        const ul = document.querySelector('ul');
        const tags = [];
        const inputTags = document.getElementById('input-tags');

        inputTags.addEventListener('keydown', function (event) {
            if (inputTags.value.trim() !== '' && event.key === ' ') {
                tags.push(inputTags.value.trim());

                let li = document.createElement('li');
                li.textContent = '#' + inputTags.value.trim();
                ul.appendChild(li);

                inputTags.value = '';
                inputTags.focus();
            }
        });

    </script>
}
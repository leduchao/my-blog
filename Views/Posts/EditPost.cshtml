@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
}

@model PostDTO

<form asp-action="EditPost" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@ViewBag.PostId">

    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label fs-5 fw-bold"></label>
        <input asp-for="@Model.Title" type="text" class="form-control" placeholder="Nhập tiêu đề">
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Image" class="form-label fs-5 fw-bold"></label>
        <input asp-for="@Model.Image" type="file" name="Image" class="form-control" placeholder="Chọn hình ảnh">
        <span asp-validation-for="@Model.Image" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="@Model.Content" class="form-label fs-5 fw-bold"></label>
        <textarea asp-for="@Model.Content" id="summernote"></textarea>
        <span asp-validation-for="@Model.Content"></span>
    </div>

    @* <div class="mb-4">
    <label class="form-label fs-5 fw-bold" asp-for="Tags">Hashtags</label>
    <input type="text" class="form-control" asp-for="Tags">
    </div> *@

    <button class="btn btn-outline-dark fs-5 fw-bold">Cập nhật</button>
    <a asp-controller="Posts" asp-action="ShowPostDetail" asp-route-id="@ViewBag.PostId"
        class="btn btn-dark fs-5 ms-3">Hủy</a>
</form>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                placeholder: "Nhập nội dung bài đăng...",
                height: 400,
            })
        });
    </script>
}
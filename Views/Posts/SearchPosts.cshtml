@{
    ViewData["Title"] = "Danh sách tìm kiếm";
}

@model IEnumerable<Post>

<div>
    <h3 class="mb-3">Danh sách tìm kiếm bài viết</h3>

    @if (Model.Count() == 0)
    {
        <p class="fst-italic">Không có bài viết nào chứa từ khóa "@ViewBag.Keyword"</p>
    }
    else
    {
        <div class="container-fluid">
            <div class="row g-4">
                @foreach (var post in Model)
                {
                    <div class="col-6 container-fluid">
                        <div class="card shadow-sm">
                            <div class="row row-cols-2">
                                <div class="col-4">
                                    <img src="~/images/@post.Image" width="240" height="160" class="image-fluid rounded-start"
                                        alt="...">
                                </div>

                                <div class="card-body col-8">
                                    <h5 class="card-title">@post.Title</h5>
                                    <p class="card-text"><small class="text-body-secondary fst-italic">Last updated:
                                            @post.LastUpdatedAt</small>
                                    </p>
                                    <a asp-controller="Posts" asp-action="ShowPostDetail" asp-route-id="@post.Id"
                                        class="btn btn-outline-dark fs-5 fw-bold">Đọc thêm</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

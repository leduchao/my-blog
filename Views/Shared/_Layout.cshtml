<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyBlog.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow px-3 fixed-top"
            style="height: 6rem;">
            <div class="container-fluid">
                <a class="navbar-brand fs-1 fw-bold pb-3" asp-area="" asp-controller="Home"
                    asp-action="Index">MyBlog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="fs-5 navbar-collapse collapse d-sm-inline-flex justify-content-between fw-bold">
                    <ul class="navbar-nav">
                        <li class="nav-item ms-4">
                            <a class="nav-link text-dark text-uppercase" asp-area="" asp-controller="Home"
                                asp-action="Index">
                                Trang chủ
                            </a>
                        </li>
                        <li class="nav-item ms-4">
                            <a class="nav-link text-dark text-uppercase" asp-area="" asp-controller="Posts"
                                asp-action="Index">
                                Bài Viết
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-4">
                                <a class="nav-link text-dark text-uppercase" asp-controller="Posts" asp-action="CreatePost">
                                    Đăng bài
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav justify-content-end">
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mb-5" style="margin-top: 8rem;">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted footer text-center">
        <div class="container text-dark">
            &copy; 2023 - MyBlog
            @* &copy; 2023 - MyBlog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- include libraries(jQuery, bootstrap) -->
    @* <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script> *@

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>

    <!-- include summernote css/js-->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

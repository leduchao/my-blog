@using Microsoft.AspNetCore.Identity
@inject SignInManager<MyBlog.Areas.Identity.Models.BlogUser> SignInManager
@inject UserManager<MyBlog.Areas.Identity.Models.BlogUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-success text-uppercase" asp-area="Identity" asp-controller="Account"
            asp-action="ShowProfile">
            @UserManager.GetUserName(User)
        </a>
    </li>

    <li class="nav-item ms-4">
        <a class="nav-link text-uppercase" asp-area="Identity" asp-controller="Account" asp-action="Logout">
            Đăng xuất
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link  text-uppercase" asp-area="Identity" asp-controller="Account" asp-action="Login">
            Đăng nhập
        </a>
    </li>

    <li class="nav-item ms-4">
        <a class="nav-link  text-uppercase" asp-area="Identity" asp-controller="Account" asp-action="Register">
            Đăng ký
        </a>
    </li>
}
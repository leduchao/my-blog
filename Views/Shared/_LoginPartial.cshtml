@using Microsoft.AspNetCore.Identity
@inject SignInManager<MyBlog.Areas.Identity.Models.BlogUser> SignInManager
@inject UserManager<MyBlog.Areas.Identity.Models.BlogUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-black" style="font-weight: 500;" asp-area="Identity" asp-controller="Account"
        asp-action="ShowProfile">
        <span class="user-name">@UserManager.GetUserName(User)</span>
    </a>

    <a class="nav-link text-black" asp-area="Identity" asp-controller="Account" asp-action="Logout">
        <span class="under-score pb-1">Đăng xuất</span>
    </a>
}
else
{
    <a class="nav-link text-black" asp-area="Identity" asp-controller="Account" asp-action="Login">
        <span class="under-score pb-1">Đăng nhập</span>
    </a>
